{% extends "default.html.jinja" %}
{% block title %}
Potions
{% endblock title %}
{% block content %}
<section>
  <h2>Table</h2>
  <table id="potions" data-page-length="100" class="table table-hover table-bordered align-middle text-center table-sm">
    <thead>
      <tr>
        <th>Ingredients</th>
        <th>Potencies</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      {% for potion in data.potions %}
      <tr>
        <td>
          {% for ingredient in potion.ingredients %}
          {% include "snippets/ingredient/link.html.jinja" %}
          {% endfor %}
        </td>
        <td>
          {% for potency in potion.potencies %}
          {% include "snippets/potency/short.html.jinja" %}
          {% endfor %}
        </td>
        <td>{{ potion.price | round(2) }}</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</section>
{% endblock content %}


{% block additional_scripts %}
{% set datatable_id = 'potions' %}
{% include "snippets/datatables.html.jinja" %}
{% endblock additional_scripts %}
{% import 'macros.jinja' as macros %}

{% extends "default.html.jinja" %}
{% block content %}
  <section>
    <h2>Table</h2>
    <table id="potions" data-page-length="100"
    class="table table-hover table-bordered align-middle text-center table-sm">
      <thead>
        <tr>
          <th>Ingredients</th>
          <th>Effects</th>
        </tr>
      </thead>
      <tbody>
      {% for potion in potions %}
        <tr>
          <td>
            {% for ingredient in potion.ingredients %}
            {{ ingredient.name }} 
            {% endfor %}
          </td>
          <td>
            {% for effect in potion.effects %}
            {{ effect.name }} 
            {% endfor %}
          </td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </section>
{% endblock content %}

{% block additional_scripts %}
  <script defer>new DataTable('#potions', {
        layout: {
        topStart: 'searchBuilder'
    }
  });</script>
{% endblock additional_scripts %}